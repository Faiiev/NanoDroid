#!/sbin/sh

umask 022
OUTFD=${2}
ZIP=${3}

ZIPDIR=$(dirname "${ZIP}")
MODID=NanoDroid_FDroid

mkdir /dev/tmp
unzip -o "${ZIP}" CommonInstaller -d "/dev/tmp"
if [ ! -f /dev/tmp/CommonInstaller ]; then
	echo " !! failed to load Common Installer"
	exit 1
else
	source "/dev/tmp/CommonInstaller"
fi

detect_bootmode
detect_outfd
show_progress 1.0 0

show_banner
set_progress 0.1

mount_partitions
unpack_zip
detect_arch
${BOOTMODE} || setup_busybox

get_cfg_setup

detect_mode
set_progress 0.5

install_fdroid
set_progress 0.9

nanodroid_finalize
set_progress 1.0


exit 0
