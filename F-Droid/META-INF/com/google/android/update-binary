#!/sbin/sh

umask 022
OUTFD=${2}
ZIP=${3}

ZIPDIR=$(dirname "${ZIP}")
MODID=NanoDroid_FDroid

unzip -o "${ZIP}" nanodroid-functions -d "/tmp" || \
	error " !! failed to load Common Installer"
source "/tmp/nanodroid-functions" || \
	error " !! failed to load Common Installer"

detect_bootmode
detect_outfd

show_banner

check_system
unpack_zip
detect_arch

get_cfg_setup

detect_mode

install_fdroid

nanodroid_finalize

exit 0
