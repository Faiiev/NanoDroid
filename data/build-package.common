print_package () {
		echo "
Creating Package

	Type		${1}
	Name		$(basename ${ZIP})
	Directory	$(dirname ${ZIP})
"
}

error () {
	echo -e "${@}"
	exit 1
}

sum_sign_package () {
	sha256sum "${1}" > "${1}.sha256"
	gpg --sign --detach-sign "${1}.sha256"
}
