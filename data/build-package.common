print_package () {
		echo "
Creating Package

	Type		${1}
	Name		${ZIP}
	Directory	${CWD}
"

	rm -f "${CWD}/${ZIP}"*
}

error () {
	echo -e "${@}"
	exit 1
}

sum_sign_package () {
	cd "${CWD}"
	cd "$(dirname "${ZIP}")"
	sha256sum "$(filename "${ZIP}")" > "${ZIP}.sha256"
	cd "${CWD}"
	gpg --sign --detach-sign "${ZIP}.sha256"
}
