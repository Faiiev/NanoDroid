#!/bin/bash

create_full_package () {
	ZIP="${CWD}/NanoDroid-${VERSION}".zip
	rm -f "${ZIP}*"

	print_package "Full"

	cd "${CWD}/Full"
	zip_add
	cd "${CWD}"

	zip_add CommonInstaller
	zip_add CommonAddon
	zip_add busybox.arm
	zip_add busybox.x86

	zip_add_doc
	zip_add_config .nanodroid-overlay 0
	zip_add_config .nanodroid-setup 0
	zip_add_config .nanodroid-apps 0

	sum_sign_package "${ZIP}"
}

mk_pkg_full () {
	create_full_package &
	progress $!
}
