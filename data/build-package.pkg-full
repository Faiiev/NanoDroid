#!/bin/bash

create_full_package () {
	ZIP="${CWD}/NanoDroid-${VERSION}".zip
	rm -f "${ZIP}"*

	print_package "Full"

	cd "${CWD}/Full"
	zip_add
	cd "${CWD}"

	for file in Common{Installer,Addon} busybox.* sqlite3.* aapt.*; do
		zip_add ${file}
	done

	zip_add_doc
	zip_add_config .nanodroid-overlay
	zip_add_config .nanodroid-setup 0
	zip_add_config .nanodroid-apps

	sum_sign_package "${ZIP}"
}

mk_pkg_full () {
	create_full_package &
	progress $!
}
